<tests>

    <test id="openblas-gcc-threads">
        <pkg>sci-libs/openblas-0.2.2</pkg>
        <emergeenv>
            <var name="FC">gfortran</var>
            <var name="CC">gcc</var>
            <var name="FFLAGS">-O3</var>
